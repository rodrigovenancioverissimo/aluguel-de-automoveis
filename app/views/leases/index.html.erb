<div class="container-fluid">
  <div class="row mt-2">
    <div class="col-12">
      <%= link_to 'New Lease', new_lease_path, class: 'btn btn-success float-right' %>
    </div>
  </div>
  <p id="notice"><%= notice %></p>
  <div class="row">
    <div class="col-sm-6">
      <h1>Leases</h1>
    </div>
    <div class="col-sm-6 d-flex justify-content-end">
      <%= paginate @leases %>
    </div>
  </div>


  <table class="table table-bordered table-hover table-striped">
    <thead>
    <tr>
      <th>Person</th>
      <th>Automobile</th>
      <th>Start time</th>
      <th>End time</th>
      <th>Entry time</th>
      <th>Exit time</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @leases.each do |lease| %>
      <tr>
        <td><%= lease.person_id %></td>
        <td><%= lease.automobile_id %></td>
        <td><%= lease.start_time %></td>
        <td><%= lease.end_time %></td>
        <td><%= lease.entry_time %></td>
        <td><%= lease.exit_time %></td>
        <td><%= link_to 'Show', lease %></td>
        <td><%= link_to 'Edit', edit_lease_path(lease) %></td>
        <td><%= link_to 'Destroy', lease, method: :delete, data: {confirm: 'Are you sure?'} %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>