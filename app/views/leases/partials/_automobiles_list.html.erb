<div id="automobiles_filterrific_results">

  <table class="table table-bordered table-hover table-striped table-sm">
    <tr>
      <th>Tipo</th>
      <th>Modelo</th>
      <th>Ano</th>
      <th>Placa</th>
      <th>Custo di√°rio</th>
      <th></th>
    </tr>
    <% if automobiles.blank? %>
      <tr><td colspan="6">Nenhum resultado encontado.</td></tr>
    <% end %>
    <% automobiles.each do |automobile| %>
      <tr>
        <td><%= automobile.automobile_type %></td>
        <td><%= automobile.model %></td>
        <td><%= automobile.year %></td>
        <td><%= automobile.plaque %></td>
        <td><%= automobile.daily_cost %></td>
        <td>
          <button class="btn btn-sm btn-success"
                  onclick="set_automobile(
                      '<%= automobile.id %>',
                      '<%= inputId %>',
                      '<%= previewInputId %>',
                      '<%= automobile.model %>',
                      '<%= modalId %>'
                      )">
            Set
          </button>
        </td>
      </tr>
    <% end %>
  </table>
  <div class="d-flex justify-content-center">
    <%= paginate automobiles, param_name: 'automobiles_page', remote: true %>
  </div>
</div>

